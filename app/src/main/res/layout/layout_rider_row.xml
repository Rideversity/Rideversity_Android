<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/ten_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/five_dp"
        android:background="@drawable/rectangle_orange_border_background"
        android:orientation="horizontal">

        <cab.com.rideversitydriver.Shapes.RoundedImageView
            android:id="@+id/imageView_joined_rider"
            android:layout_width="@dimen/fourty_dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_margin="@dimen/ten_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:src="@drawable/no_image" />

        <!--<ImageView
            android:layout_width="@dimen/fourty_dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_margin="@dimen/ten_dp"
            android:background="@drawable/rounded_background_orange" />-->

        <TextView
            android:id="@+id/textView_rider_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center_vertical|left"
            android:text="@string/rider1"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>