<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textview_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_one"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/toggle_notification"
        android:layout_marginLeft="@dimen/ten_dp"
        android:textColor="@color/black"
        android:layout_below="@+id/notification_Header"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/toggle_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ten_dp"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/twentyfive_dp"
        android:focusable="true"
        android:layout_centerInParent="true"
        app:theme="@style/switchStyle"
        android:theme="@style/switchStyle"/>
</LinearLayout>
