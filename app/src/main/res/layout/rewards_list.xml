<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayout_rewardrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cab.com.rideversitydriver.Shapes.PorterShapeImageView
            android:id="@+id/imageView_reward"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_margin="@dimen/five_dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            app:siShape="@drawable/shape_rounded_rectangle"
            android:scaleType="fitXY"
            app:siSquare="true"/>

        <TextView
            android:id="@+id/textView_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_toRightOf="@+id/imageView_reward"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="Text"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />



        <TextView
            android:id="@+id/minutesText"
            android:layout_below="@id/textView_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_reward"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/ten_dp"
            android:text="Minutes Text"/>

        <ImageView
            android:id="@+id/imageView_right_arrow"
            android:layout_width="@dimen/ten_dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/twenty_dp"
            android:src="@drawable/orange_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/point_five_dp"
            android:layout_below="@+id/imageView_reward"
            android:layout_marginTop="@dimen/two_dp"
            android:background="@color/grey" />

    </RelativeLayout>


    <!--</android.support.v7.widget.CardView>-->
</RelativeLayout>