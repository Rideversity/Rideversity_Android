<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fifty_dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/imageView_backarrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_arrow"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:src="@drawable/back_arrow" />

        <View
            android:id="@+id/line"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_toRightOf="@+id/imageView_arrow"
            android:background="@color/grey" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_toRightOf="@+id/imageView_backarrow"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />



    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Id : Kate"
        android:visibility="gone"
        android:layout_marginRight="@dimen/ten_dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/updateClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:visibility="gone"
        android:layout_marginRight="@dimen/ten_dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/report_Rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Rider"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />
</RelativeLayout>