<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:tag="cards main container">

    <LinearLayout
        android:id="@+id/layout_pickup_now"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <cab.com.rideversitydriver.Shapes.RoundedImageView
                android:id="@+id/imageView_driver"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/five_dp"
                android:src="@drawable/no_image"/>


            <ImageView
                android:id="@+id/image_rideHistory_from"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/imageView_driver"
                android:src="@drawable/ride_history_from" />

            <ImageView
                android:id="@+id/image_rideHistory_to"
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_below="@+id/image_rideHistory_from"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/imageView_driver"
                android:src="@drawable/ride_history_to" />

            <TextView
                android:id="@+id/addressLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/image_rideHistory_from"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="30 NE 1ND AVE "
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/addressLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressLine1"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/image_rideHistory_from"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="52 NS 3RD AVE"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">

            <TextView
                android:id="@+id/driver_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/five_dp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/five_dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_orange"
                android:text="3"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imageView_arrow"
                android:layout_toRightOf="@+id/driver_count"
                android:layout_marginLeft="@dimen/two_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:gravity="right"
                android:singleLine="true"
                android:text="DRIVER REQUESTS"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toLeftOf="@+id/imageView_arrow"
                android:layout_toRightOf="@+id/driver_count"
                android:layout_marginLeft="@dimen/two_dp"
                android:gravity="right"
                android:layout_below="@+id/time"
                android:singleLine="true"
                android:text="05/10/2016 11:45 AM"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/imageView_arrow"
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:src="@drawable/orange_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pickup_later"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <cab.com.rideversitydriver.Shapes.RoundedImageView
                android:id="@+id/imageView_driver_upcoming"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/five_dp"
                android:src="@drawable/no_image"/>


            <ImageView
                android:id="@+id/image_upcomrideHistory_from"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/imageView_driver_upcoming"
                android:src="@drawable/ride_history_from" />

            <ImageView
                android:id="@+id/image_upcomrideHistory_to"
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_below="@+id/image_upcomrideHistory_from"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/imageView_driver_upcoming"
                android:src="@drawable/ride_history_to" />

            <TextView
                android:id="@+id/addressLine1_upcom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/image_upcomrideHistory_from"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="30 NE 1ND AVE"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/addressLine2_upcom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressLine1_upcom"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/image_upcomrideHistory_from"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="40 NW 2ND AVE"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_toLeftOf="@+id/imageView_green_arrow"
                android:background="@drawable/stroke_green_tab"
                android:gravity="center"
                android:padding="@dimen/three_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateTime_upcom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="UPCOMING RIDES"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/time_upcom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressLine1_upcom"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="07/11/2016 10:50 PM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_green_arrow"
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:src="@drawable/green_arrow" />
        </RelativeLayout>
    </LinearLayout>


