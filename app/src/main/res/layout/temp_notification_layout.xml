<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_header_advanced_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bt_light_gray"
                    android:gravity="center"
                    android:padding="@dimen/five_dp"
                    android:text="Advanced_Booking_Ride_Reminders"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/notify_30_minutes_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="Notify 30 mints Before"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/notify_30_minutes_before_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/notify_1_hour_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="Notify 1 hour before"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/notify_1_hour_before_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/notify_1_day_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="Notify 1 day before"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/notify_1_day_before_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/notify_3_days_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="Notify 3 days before"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/notify_3_days_before_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_rides_posted_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bt_light_gray"
                    android:gravity="center"
                    android:padding="@dimen/five_dp"
                    android:text="New Rides Posted"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/rider_doesnt_accept_real_advance"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:maxLines="2"
                        android:text="Rider..."
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/rider_doesnt_accept_real_advance_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/request_has_been_accepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="Request has been accepted"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/rider_has_been_accepted_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/new_ride_has_been_posted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="New ride has been posted"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/new_ride_has_been_posted_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/new_reward_has_posted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.7"
                        android:text="New reward has been posted"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/new_reward_has_posted_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.3"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/reward_expire_24_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.5"
                        android:text="Reward is about to expire within 24 hours"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/reward_expire_24_hours_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.5"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/three_dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/new_rides_posted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_weight="0.5"
                        android:text="Reward is about to expire within 24 hours"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/new_rides_posted_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_weight="1.5"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/text_notify_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bt_light_gray"
                android:gravity="center"
                android:padding="@dimen/five_dp"
                android:text="Notification Range"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="05 Mi"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10 Mi"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15 Mi"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20 Mi"
                    android:textColor="@color/black" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekbar_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/sp_50"
                android:theme="@style/switchStyle"
                app:theme="@style/switchStyle"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
