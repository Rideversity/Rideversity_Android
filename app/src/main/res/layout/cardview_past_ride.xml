<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <!--   <android.support.v7.widget.CardView
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
           android:id="@+id/card_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           card_view:cardElevation="5dp"
           card_view:cardUseCompatPadding="false">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:orientation="horizontal">

        <cab.com.rideversitydriver.Shapes.RoundedImageView
            android:id="@+id/imageView_driver"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/five_dp"
            android:src="@drawable/welcome_bg"/>

        <!--<ImageView
            android:id="@+id/imageView_driver"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/five_dp"
            android:background="@drawable/rounded_background_orange" />-->

        <ImageView
            android:id="@+id/image_rideHistory_from"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toRightOf="@+id/imageView_driver"
            android:src="@drawable/ride_history_from" />

        <ImageView
            android:id="@+id/image_rideHistory_to"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_below="@+id/image_rideHistory_from"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toRightOf="@+id/imageView_driver"
            android:src="@drawable/ride_history_to" />

        <TextView
            android:id="@+id/addressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toRightOf="@+id/image_rideHistory_from"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="30 NE 138 1ND AVE"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/addressLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressLine1"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toRightOf="@+id/image_rideHistory_from"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="20 NE 138 1ND AVE"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressLine1"
            android:layout_toLeftOf="@+id/imageView_arrow"
            android:layout_toRightOf="@+id/addressLine2"
            android:gravity="right"
            android:maxLines="1"
            android:text="11:45 AM"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toLeftOf="@+id/imageView_arrow"
            android:layout_toRightOf="@+id/addressLine1"
            android:gravity="right"
            android:maxLines="1"
            android:text="05/10/2016"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/imageView_arrow"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:src="@drawable/orange_arrow" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/grey" />

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>