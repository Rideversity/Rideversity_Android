<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:text="@string/bank"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_forgotUsername"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/tap_enter"
            android:imeOptions="actionNext"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/custom_edittext_cursor_green"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/bank_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please enter Bank Name"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14" />

        <!--
                <EditText
                    android:id="@+id/bank_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="Enter Bank Name"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/sp_14" />-->

        <!-- <EditText
             android:id="@+id/account_number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/five_dp"
             android:ellipsize="end"
             android:gravity="center"
             android:hint="@string/tap_here"
             android:textColorHint="@color/colorPrimary"
             android:textSize="@dimen/sp_14" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:gravity="center"
            android:text="@string/account_holder"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/account_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_forgotUsername"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/tap_enter"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/custom_edittext_cursor_green"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/account_holder_name_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="Please enter Account holder Name"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14" />

        <!--<EditText
            android:id="@+id/account_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/tap_here"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:gravity="center"
            android:text="@string/routing_number"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/routing_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/tap_enter"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/custom_edittext_cursor_green"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/routing_number_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="Please enter routing Number"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:text="@string/account_number"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_forgotUsername"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/tap_enter"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/custom_edittext_cursor_green"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/account_number_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="Please enter Account Number"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>
</LinearLayout>