<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="cards main container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/five_dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9">

                <cab.com.rideversitydriver.Shapes.RoundedImageView
                    android:id="@+id/imageView_driver"
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:src="@drawable/no_image"/>

                <!--<ImageView
                    android:id="@+id/imageView_driver"
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:background="@drawable/rounded_background_orange" />-->

                <ImageView
                    android:id="@+id/image_rideHistory_from"
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_toRightOf="@+id/imageView_driver"
                    android:src="@drawable/ride_history_from" />

                <ImageView
                    android:id="@+id/image_rideHistory_to"
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_below="@+id/image_rideHistory_from"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_toRightOf="@+id/imageView_driver"
                    android:src="@drawable/ride_history_to" />

                <TextView
                    android:id="@+id/addressLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image_rideHistory_from"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="30 NE 1ND AVE" />

                <TextView
                    android:id="@+id/addressLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressLine1"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_toRightOf="@+id/image_rideHistory_to"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="52 NS 3RD AVE" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/textview_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imageView_arrow"
                    android:gravity="right"
                    android:textSize="@dimen/sp_12"
                    android:singleLine="true"
                    android:text="05/10/2016 11:45 AM"
                    android:textColor="@color/orange" />



                <TextView
                    android:id="@+id/textview_dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imageView_arrow"
                    android:gravity="right"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_12"
                    android:text="$10.00"
                    android:textColor="@color/colorPrimary" />


                <TextView
                    android:id="@+id/textview_mins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imageView_arrow"
                    android:gravity="right"
                    android:layout_below="@+id/textview_dollar"
                    android:textSize="@dimen/sp_12"
                    android:singleLine="true"
                    android:text="1 min"
                    android:textColor="@color/orange" />



                <ImageView
                    android:id="@+id/imageView_arrow"
                    android:layout_width="@dimen/fifteen_dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/orange_arrow" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

